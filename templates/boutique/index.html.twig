{% extends 'base.html.twig' %}

{% block title %}Boutique - Cursus disponibles{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center bg-primary text-white p-3 mb-4 rounded shadow-sm">
        <h1 class="h4 mb-0">Boutique des Cursus</h1>
        <a href="{{ path('app_home') }}" class="btn btn-light">Retour à l'Accueil</a>
    </header>

    <!-- Main Section -->
    <section>
        <h2 class="text-secondary mb-4">Cursus disponibles</h2>
        <table class="table table-hover shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col" class="text-center">Prix</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for cursus in cursus %}
                    <tr>
                        <td>{{ cursus.title }}</td>
                        <td class="text-center">{{ cursus.price }} €</td>
                        <td class="text-center">
                            <a href="{{ path('purchase_item', { type: 'cursus', id: cursus.id }) }}" class="btn btn-success btn-sm" data-turbo="false">Acheter</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">Aucun cursus disponible pour le moment.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

</div>

    <!-- Footer -->
    <footer class="glass-footer">
        <div class="footer-container">
            <div class="footer-section">
                <h4>Knowledge Learning</h4>
                <p>Une plateforme d'apprentissage en ligne adaptée à vos besoins.</p>
            </div>
            <div class="footer-section">
                <h4>Liens Utiles</h4>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_user_profile') }}">Mon Profil</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contact</h4>
                <p>Email : support@knowledgelearning.com</p>
                <p>Téléphone : +33 6 59 88 88 81</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        </div>
    </footer>

{% endblock %}
