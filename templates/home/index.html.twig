{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container">
    <!-- Navbar -->
<nav class="glass-navbar">
    <a class="navbar-brand font-weight-bold" href="{{ path('app_home') }}">Knowledge Learning</a>
    <div class="navbar-links">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_back_office') }}" class="">Back-Office</a>
        {% endif %}
        
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_user_profile') }}" class="">Mon profil</a>
            <a href="{{ path('app_logout') }}" class="">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="">Se Connecter</a>
            <a href="{{ path('app_register') }}" class="">S'enregistrer</a>
        {% endif %}
    </div>
</nav>


    <!-- Header Section -->
    <header class="glass-header">
        <h1>Bienvenue sur Knowledge Learning</h1>
        <p>Découvrez nos thèmes et cursus pour apprendre à votre rythme.</p>
    </header>

    <!-- Themes Section -->
    <section class="themes-section">
        <h2>Nos Thèmes de Formation</h2>
        <div class="themes-container">
            {% for theme in themes %}
            <div class="glass-card">
                <h3>{{ theme.name }}</h3>
                <p>Explorez des cursus adaptés à vos envies et besoins.</p>
                <a href="{{ path('app_cursus_show', { id: theme.id }) }}" class="glass-button">Voir les cursus</a>
            </div>
            {% endfor %}
        </div>
    </section>

    <!-- Footer -->
    <footer class="glass-footer">
        <p>&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Conçu avec ❤️ pour l'apprentissage.</small>
    </footer>
</div>
{% endblock %}
