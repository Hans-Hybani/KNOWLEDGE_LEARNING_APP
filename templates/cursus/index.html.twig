{# templates/cursus/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Cursus{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center bg-primary text-white p-3 mb-4 rounded shadow-sm">
        <h1 class="h4 mb-0">Liste des Cursus</h1>
        <a href="{{ path('app_back_office') }}" class="btn btn-light">Retour au back office</a>
    </header>

    <!-- Main Section -->
    <section>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-secondary mb-0">Tous les Cursus</h2>
            <a href="{{ path('app_cursus_new') }}" class="btn btn-primary">Créer un Cursus</a>
        </div>

        <ul class="list-group shadow-sm">
            {% for cursus in cursus %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>{{ cursus.title }}</span>
                    <div>
                        <a href="{{ path('app_cursus_edit', { id: cursus.id }) }}" class="btn btn-secondary btn-sm">Modifier</a>
                        <form action="{{ path('app_cursus_delete', { id: cursus.id }) }}" method="post" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cursus.id) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </div>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">
                    Aucun cursus disponible.
                </li>
            {% endfor %}
        </ul>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Gestion des cursus.</small>
    </footer>
</div>
{% endblock %}
