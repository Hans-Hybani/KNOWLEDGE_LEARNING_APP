{% extends 'base.html.twig' %}

{% block title %}Back-Office - Knowledge Learning{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
<nav class="glass-navbar">
    <a class="navbar-brand font-weight-bold" href="{{ path('app_home') }}">Knowledge Learning</a>
    <div class="navbar-links">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_back_office') }}" class="">Back-Office</a>
        {% endif %}
        
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_user_profile') }}" class="">Mon profil</a>
            <a href="{{ path('app_logout') }}" class="">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="">Se Connecter</a>
            <a href="{{ path('app_register') }}" class="">S'enregistrer</a>
        {% endif %}
    </div>
</nav>

    <section>
        <h2 class="glass-title">Gérer les Sections</h2>
        <div class="glass-table-container">
            <table class="glass-table">
                <thead>
                    <tr>
                        <th>Section</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Certification</td>
                        <td class="text-center">
                            <a href="{{ path('certification') }}" class="glass-button-outline small">Gérer les Certifications</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Cursus</td>
                        <td class="text-center">
                            <a href="{{ path('app_cursus') }}" class="glass-button-outline small">Gérer les Cursus</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Leçons</td>
                        <td class="text-center">
                            <a href="{{ path('app_lesson') }}" class="glass-button-outline small">Gérer les Leçons</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Thèmes</td>
                        <td class="text-center">
                            <a href="{{ path('app_theme') }}" class="glass-button-outline small">Gérer les Thèmes</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Utilisateurs</td>
                        <td class="text-center">
                            <a href="{{ path('app_user') }}" class="glass-button-outline small">Gérer les Utilisateurs</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>
    <!-- Footer -->
    <footer class="glass-footer">
        <div class="footer-container">
            <div class="footer-section">
                <h4>Knowledge Learning</h4>
                <p>Une plateforme d'apprentissage en ligne adaptée à vos besoins.</p>
            </div>
            <div class="footer-section">
                <h4>Liens Utiles</h4>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_user_profile') }}">Mon Profil</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contact</h4>
                <p>Email : support@knowledgelearning.com</p>
                <p>Téléphone : +33 6 59 88 88 81</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        </div>
    </footer>
{% endblock %}
