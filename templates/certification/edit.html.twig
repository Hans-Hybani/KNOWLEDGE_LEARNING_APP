{# templates/certification/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier une Certification{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center bg-primary text-white p-3 mb-4 rounded shadow-sm">
        <h1 class="h4 mb-0">Modifier une Certification</h1>
        <a href="{{ path('certification') }}" class="btn btn-light">Retour à la liste</a>
    </header>

    <!-- Form Section -->
    <section>
        <div class="card shadow-sm p-4">
            <h2 class="text-secondary mb-3">Formulaire de modification</h2>
            {{ form_start(form) }}
                {{ form_widget(form, {'attr': {'class': 'form-control mb-3'}}) }}
                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('certification') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Gestion des certifications.</small>
    </footer>
</div>
{% endblock %}
