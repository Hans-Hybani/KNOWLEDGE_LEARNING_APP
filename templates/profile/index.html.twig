{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-5">
<nav class="glass-navbar">
    <a class="navbar-brand font-weight-bold" href="{{ path('app_home') }}">Knowledge Learning</a>
    <div class="navbar-links">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_back_office') }}" class="">Back-Office</a>
        {% endif %}
        
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_user_profile') }}" class="">Mon profil</a>
            <a href="{{ path('app_logout') }}" class="">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="">Se Connecter</a>
            <a href="{{ path('app_register') }}" class="">S'enregistrer</a>
        {% endif %}
    </div>
</nav>
    <h1 class="mb-4">Mon profil</h1>

    {{ form_start(profileForm, {'attr': {'class': 'form'}}) }}
        <div class="form-group mb-3">
            {{ form_label(profileForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.nom) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(profileForm.dateNaissance, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.dateNaissance, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.dateNaissance) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(profileForm.metier, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.metier, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.metier) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(profileForm.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.adresse, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.adresse) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(profileForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.email) }}
        </div>
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
    {{ form_end(profileForm) }}
</div>

    <!-- Footer -->
        <footer class="glass-footer">
        <div class="footer-container">
            <div class="footer-section">
                <h4>Knowledge Learning</h4>
                <p>Une plateforme d'apprentissage en ligne adaptée à vos besoins.</p>
            </div>
            <div class="footer-section">
                <h4>Liens Utiles</h4>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_user_profile') }}">Mon Profil</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contact</h4>
                <p>Email : support@knowledgelearning.com</p>
                <p>Téléphone : +33 6 59 88 88 81</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        </div>
    </footer>
{% endblock %} 