{# templates/lesson/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer une Leçon{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center bg-primary text-white p-3 mb-4 rounded shadow-sm">
        <h1 class="h4 mb-0">Créer une Nouvelle Leçon</h1>
        <a href="{{ path('app_lesson') }}" class="btn btn-light">Retour à la liste des Leçons</a>
    </header>

    <!-- Form Section -->
    <section>
        <div class="card shadow-sm p-4">
            <h2 class="text-secondary mb-3">Formulaire de création</h2>
            {{ form_start(form, {"attr":{'data-turbo':'false', 'class': 'form'}}) }}
                {{ form_widget(form, {'attr': {'class': 'form-control mb-3'}}) }}
                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-primary">Créer</button>
                    <a href="{{ path('app_lesson') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Gestion des leçons.</small>
    </footer>
</div>
{% endblock %}
