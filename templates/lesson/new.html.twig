{# templates/lesson/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer une Leçon{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Navbar -->
<nav class="glass-navbar">
    <a class="navbar-brand font-weight-bold" href="{{ path('app_home') }}">Knowledge Learning</a>
    <div class="navbar-links">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_back_office') }}" class="">Back-Office</a>
        {% endif %}
        
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_user_profile') }}" class="">Mon profil</a>
            <a href="{{ path('app_logout') }}" class="">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="">Se Connecter</a>
            <a href="{{ path('app_register') }}" class="">S'enregistrer</a>
        {% endif %}
    </div>
</nav>

    <!-- Form Section -->
<section>
    <div class="glass-card">
        <h2 class="glass-title">Formulaire de création</h2>
        {{ form_start(form, {"attr":{'data-turbo':'false', 'class': 'glass-form'}}) }}
            {{ form_widget(form, {'attr': {'class': 'glass-form-control'}}) }}
            <div class="glass-actions">
                <button type="submit" class="glass-button">Créer</button>
                <a href="{{ path('app_lesson') }}" class="glass-button-outline">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</section>


    <!-- Footer -->
    <footer class="glass-footer">
        <p>&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Gestion des lessons.</small>
    </footer>
</div>
{% endblock %}
