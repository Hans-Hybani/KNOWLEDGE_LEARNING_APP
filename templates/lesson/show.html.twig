{% extends 'base.html.twig' %}

{% block title %}Liste des Leçons{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center bg-primary text-white p-3 mb-4 rounded shadow-sm">
        <h1 class="h4 mb-0">Liste des Leçons</h1>
        <a href="{{ path('app_home') }}" class="btn btn-light">Retour à l'Accueil</a>
    </header>

    <!-- Main Section -->
    <section>
        <h2 class="text-secondary mb-4">Découvrez nos Leçons</h2>
        <div class="row">
            {% for lesson in lessons %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">{{ lesson.title }}</h5>
                            <p class="card-text mb-3">Prix : <strong>{{ lesson.price }} €</strong></p>

                            <!-- Vidéo -->
                            {% if lesson.video %}
                                <div class="mb-3">
                                    <video width="100%" height="180" controls>
                                        <source src="{{ asset('uploads/videos/' ~ lesson.video) }}" type="video/mp4">
                                        Votre navigateur ne supporte pas la vidéo.
                                    </video>
                                </div>
                            {% else %}
                                <p class="text-muted">Aucune vidéo disponible</p>
                            {% endif %}

                            <!-- Fiche PDF -->
                            {% if lesson.fiche %}
                                <div class="mb-3">
                                    <a href="{{ asset('uploads/pdfs/' ~ lesson.fiche) }}" target="_blank" class="btn btn-secondary">Voir la fiche PDF</a>
                                </div>
                            {% else %}
                                <p class="text-muted">Aucune fiche PDF disponible</p>
                            {% endif %}

                            <!-- Actions -->
                            <div class="mt-auto">
                                <a href="{{ path('lesson_toggle_completion', { id: lesson.id }) }}" 
                                   class="btn {% if lesson.completed %}btn-success{% else %}btn-danger{% endif %}">
                                    {% if lesson.completed %}Leçon terminée{% else %}Marquer comme terminée{% endif %}
                                </a>
                                <a href="{{ path('purchase_item', { type: 'lesson', id: lesson.id }) }}" 
                                   class="btn btn-success mt-3" data-turbo="false">Acheter</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center text-muted">
                    <p>Aucune leçon disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Explorez et complétez vos leçons préférées.</small>
    </footer>
</div>
{% endblock %}
