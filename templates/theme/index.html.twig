{# templates/theme/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des Thèmes{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center bg-primary text-white p-3 mb-4 rounded shadow-sm">
        <h1 class="h4 mb-0">Liste des Thèmes</h1>
        <a href="{{ path('app_back_office') }}" class="btn btn-light">Retour au back office</a>
    </header>

    <!-- Main Section -->
    <section>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-secondary mb-0">Tous les Thèmes</h2>
            <a href="{{ path('app_theme_new') }}" class="btn btn-primary">Créer un Thème</a>
        </div>

        <ul class="list-group shadow-sm">
            {% for theme in themes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-bold">{{ theme.name }}</span>
                    <div>
                        <a href="{{ path('app_theme_edit', { id: theme.id }) }}" class="btn btn-secondary btn-sm me-2">Modifier</a>
                        <form action="{{ path('app_theme_delete', { id: theme.id }) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </div>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">Aucun thème disponible pour le moment.</li>
            {% endfor %}
        </ul>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Knowledge Learning. Tous droits réservés.</p>
        <small>Gestion des thèmes.</small>
    </footer>
</div>
{% endblock %}
