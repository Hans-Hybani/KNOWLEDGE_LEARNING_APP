{# templates/theme/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Thèmes{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Thèmes</h1>
    <a href="{{ path('app_theme_new') }}" class="btn btn-primary mb-3">Créer un Thème</a>
    <ul class="list-group">
        {% for theme in themes %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>{{ theme.name }}</span>
                <div>
                    <a href="{{ path('app_theme_edit', { id: theme.id }) }}" class="btn btn-secondary btn-sm me-2">Modifier</a>
                    <form action="{{ path('app_theme_delete', { id: theme.id }) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
